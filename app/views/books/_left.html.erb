
     <div class="col-md-3">
      <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </th>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
            <tr>
              <th>follows</th>
              <th><%= link_to user.followings.count, followings_user_path(user) %></th>
            </tr>
            <tr>
              <th>followers</th>
              <th><%= link_to user.followers.count, followers_user_path(user) %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <% if user == current_user %>
            <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block btn-sm", method: :get do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          <% else %>
            <% if user.is_followed_by?(current_user) %>
              <%= link_to "フォロー外す", user_relationships_path(user), method: :delete, class: "btn btn-danger btn-sm ml-3" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user), method: :post, class: "btn btn-success btn-sm ml-3" %>
            <% end %>
          <% end %>
        </div>
        <%= render 'books/form', book: book %>
    </div>







