<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </th>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
          </tbody>
        </table
        <div class="row">
         <%= link_to edit_user_registration(@user) class: "fas fa-user-cog btn btn-outline-secondary btn-block" %>
        </div>
        <h2 class="mt-3">New book</h2>
        <form class="form-group">
          <label for-"book_title">Title</label>
        </form>
        <form class="form-group">
          <label for-"book_opinion">Opinion</label>
        </form>
        <form class="form-group">
        
        </form>
        
      
      
    </div>
  </div>
</div>
