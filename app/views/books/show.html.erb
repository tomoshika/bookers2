<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/list', book: @book, user: @user %>



    <div class="col-md-8 offset-md-1">
      <h2>Books detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
            <tr>
              <td><%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></br>
              <%= link_to @book.user.name, user_path(@book.user) %></td>
              <td><%= link_to @book.title, book_path(@book) %></td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
               <td><%= link_to "edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
               <td><%= link_to "destroy", books_path(@book), method: :delete, class: "btn btn-sm btn-danger" %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>