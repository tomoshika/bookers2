

    <div class="col-md-8 offset-md-1">
      <h2>Book Detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image %></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

